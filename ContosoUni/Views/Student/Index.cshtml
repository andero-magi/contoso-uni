@model IEnumerable<ContosoUni.Models.Student>;

<h2>Index</h2>
<p>
    <a asp-action="Create">Create new</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.FirstMidName)</th>
            <th>@Html.DisplayNameFor(model => model.EnrollmentDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(mitem => item.LastName)</td>
                <td>@Html.DisplayFor(mitem => item.FirstMidName)</td>
                <td>@Html.DisplayFor(mitem => item.EnrollmentDate)</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
